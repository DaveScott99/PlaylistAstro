<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/all.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css"
    />
    <title>Playlist - Astro</title>
  </head>
  <body>

    <nav>
      
      <ul>
        <li>
          <a href="/"><i class="bi bi-stars logo"></i></a>
        </li>
            <h1>Astro</h1>
        <li>
          <a href="/admin"><i class="bi bi-gear config"></i></a>
        </li>
      </ul>

    </nav>

    

  <div id="modal-musicas" class="modal-container">

    <div class="modal">

      <section id="player">
    
        <div>
          <img id="currentImg" src="/img/musicoff.jpeg" alt="" />
          <h2 id="currentName">Titulo</h2>
          <p id="currentArtist">Artista</p>
        </div>
  
        <div>
          <table>
            <thead>
              <tr>
                <th></th>
                <th>Nome</th>
                <th>Artista</th>
                <th></th>
              </tr>
            </thead>
  
            <tbody>
              <% playlist.forEach((music) => { %>
              <tr class="musics">
                <td><img src="<%= music.linkImage %>" alt="Imagem da música" /></td>
  
                <td>
                  <%= music.name%>
                </td>
  
                <td>
                  <%= music.author %>
                </td>
  
                <td>
                  <audio src="<%= music.linkMusic%>"></audio>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>
  

    </div>
    

  </div>








    <section  class="musicas">


        <% playlist.forEach((music) => { %>
          <article  class="card">
          
          <img src="<%= music.linkImage %>" alt="Imagem da música" />

            <div class="titulo">
              <%= music.name%>
            </div>

            <div class="autor">
              <%= music.author %>

            </div>
              <audio src="<%= music.linkMusic%>"></audio>
          </article>
        <% }) %>



    </section>

    
  

    <section id="controls">

      
        <i id="prev-control" class="bi bi-skip-start-fill"></i>
        <i id="play-control" class="bi bi-play-fill"></i>
        <i id="next-control" class="bi bi-skip-end-fill"></i>

      
        <span id="current-duration">00:00</span>
        <input id="progressbar" type="range" min="0" max="0" step="1" />
        <span id="total-duration">00:00</span>
      

        <i id="vol-icon" class="bi bi-volume-up-fill"></i>
        <input id="volume" type="range" min="0" max="100" step="1" />
        
    
        <i id="abrir-modal" class="bi bi-music-note-list btn-Playlist"></i>
  



    </section>



    <script src="/script.js"></script>
  </body>
</html>
